{% extends 'base.html.twig' %}

{% block title %}Reset your password
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
	<h1 class="h3 mb-3 mt-3 font-weight-normal text-center">Forgot Password</h1>

	<div class="card border-primary mb-3 mx-auto text-center" style="max-width: 40rem;">
		<div class="card-body m-3">
			{{ form_start(requestForm) }}
			{{ form_row(requestForm.email) }}
			<div>
				<small>
					Enter your email address and we we will send you a
																	                link to reset your password.
				</small>
			</div>

			<button class="btn btn-primary mt-3">Send password reset email</button>
			{{ form_end(requestForm) }}
		</div>
	</div>
{% endblock %}
