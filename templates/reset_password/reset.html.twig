{% extends 'base.html.twig' %}

{% block title %}Forgot Password
{% endblock %}

{% block body %}
<h1 class="h3 mb-3 mt-3 font-weight-normal text-center">Forgot Password</h1>
<div class="card border-primary mb-3 mx-auto text-center" style="max-width: 40rem;">
	<div class="card-body m-3">
		{{ form_start(resetForm) }}
		{{ form_row(resetForm.plainPassword) }}
		<button class="btn btn-primary">Reset password</button>
		{{ form_end(resetForm) }}
	</div>
</div {% endblock %}
